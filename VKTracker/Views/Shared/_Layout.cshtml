                                else
                                {
                                    <a class="dropdown-item" href="@Url.Action("FabricIndex", "Master")">
                                        <span class="align-middle" data-key="t-logout">Fabric</span>
                                    </a>

                                    <a class="dropdown-item" href="@Url.Action("ItemIndex", "Master")">
                                        <span class="align-middle" data-key="t-logout">Item Type</span>
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("StockCodeIndex", "Master")">
                                        <span class="align-middle" data-key="t-logout">Stock Code</span>
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("ParcelCodeIndex", "Master")">
                                        <span class="align-middle" data-key="t-logout">Parcel</span>
                                    </a>
                                    <a class="dropdown-item" href="@Url.Action("CustomerIndex", "Master")">
                                        <span class="align-middle" data-key="t-logout">Customer</span>
                                    </a>
                                }
                            </div>

                            <a href="@Url.Action("Index","Parcel")" class="btn shadow-none" id="page-header-user-dropdown">
                                <span class="d-flex align-items-center">
                                    <i class="ri ri-gift-fill ri-2x text-white" tooltip="lol"></i>
                                    <span class="text-start ms-xl-2">
                                        <span class="d-none d-xl-inline-block ms-1 fw-medium text-white" data-key="t-logout">Parcel</span>
                                    </span>
                                </span>
                            </a>

                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="dropdown ms-sm-3 header-item topbar-user">
                            <button type="button" class="btn shadow-none" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="d-flex align-items-center">
