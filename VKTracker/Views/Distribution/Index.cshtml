@model VKTracker.Model.ViewModel.DistributionViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/_BreadCrum.cshtml")

<div class="card">
    <div class="card-header d-flex align-items-center">
        <div class="card-title mb-0 flex-grow-1" id="distributionHeader"></div>
        <div>
            <button class="btn btn-primary btn-label waves-effect waves-light" data-bs-toggle="modal" id="btnDistributionModal" data-bs-target="#distributionModal">
                <i class="ri-add-circle-line label-icon align-middle fs-16 me-2"></i> Add Distributions
            </button>
        </div>
    </div>
    <div class="card-body">
        <form id="frmSearch" name="frmSearch">
            <div class="row mb-4 d-flex">
                <div class="col-3">
                    <label for="projectName-field" class="form-label">Stock Code</label>
                    @Html.DropDownListFor(m => m.StockCodeId, (SelectList)ViewBag.StockCodeDDL, new { @class = "form-select" })
                </div>
                <div class="col-3">
                    <label for="projectName-field" class="form-label">Fabric</label>
                    @Html.DropDownListFor(m => m.FabricId, (SelectList)ViewBag.FabricDDL, new { @class = "form-select" })
                </div>
                <div class="col-3">
                    <label for="projectName-field" class="form-label">Item Type</label>
                    @Html.DropDownListFor(m => m.ItemTypeId, (SelectList)ViewBag.ItemTypeDDL, new { @class = "form-select" })
                </div>
                <div class="col-3">
                    <label for="projectName-field" class="form-label">A Quantity</label>
                    @Html.TextBoxFor(m => m.AvailableQuantity, new { @class = "form-control" })
                </div>
                <div class="col-3">
                    <label for="projectName-field" class="form-label">Location</label>
                    @Html.DropDownListFor(m => m.ItemTypeId, (SelectList)ViewBag.LocationDDL, new { @class = "form-select" })
                </div>
                <div class="col-3">
                    <label for="projectName-field" class="form-label">Stock No</label>
                    @Html.TextBoxFor(m => m.StockNo, new { @class = "form-control" })
                </div>
                <div class="col-1 mt-4">
                    <button type="button" class="btn btn-success btn-label waves-effect waves-light" id="btnSearch">
                        <i class="ri-search-line label-icon align-middle fs-16 me-2"></i>Search
                    </button>
                </div>
            </div>
        </form>
        <table id="gridDistribution" class="display table caption-top table-nowrap" style="width:100%">
            <thead class="table-light">
                <tr>
                    <th>Parcel Id</th>
                    <th>Parcel Code</th>
                    <th>Dishpached Date</th>
                    <th>Challan No</th>
                    <th>Arrival Date</th>
                    <th>Receive Location</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal fade zoomIn" id="distributionModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0">
            <div class="modal-header p-3 bg-soft-info">
                <h5 class="modal-title" id="exampleModalLabel">Distribution Add</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
            </div>
            <form id="parcelForm" name="parcelForm" method="post">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <label for="projectName-field" class="form-label">Stock Code</label>
                            @Html.DropDownListFor(m => m.StockCodeId, (SelectList)ViewBag.StockCodeDDL, new { @class = "form-select" })
                        </div>
                        <div class="col-6">
                            <label for="projectName-field" class="form-label">Distribution Date</label>
                            @Html.TextBoxFor(m => m.DistributionDate, new Dictionary<string, object> { { "data-provider", "flatpickr" }, { "data-date-format", "Y-m-d" }, { "class", "form-control" }, { "placeholder", "dd-mm-yyyy" } })
                        </div>
                        <div class="col-6">
                            <label for="projectName-field" class="form-label">Party</label>
                            @Html.DropDownListFor(m => m.PartyId, (SelectList)ViewBag.StockCodeDDL, new { @class = "form-select" })
                        </div>
                        <div class="col-6">
                            <label for="projectName-field" class="form-label">Quantity</label>
                            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", @placeHolder = "Quantity" })
                        </div>
                        <div class="col-6">
                            <label for="projectName-field" class="form-label">Bill Number</label>
                            @Html.TextBoxFor(m => m.BillNo, new { @class = "form-control", @placeHolder = "Bill Number" })
                        </div>
                        <div class="col-12">
                            <label for="projectName-field" class="form-label">Note</label>
                            @Html.TextAreaFor(x => x.Note, new { @class = "form-control", @placeHolder = "Note", @Rows = "3",@maxLength = "250" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light" id="close-modal" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-success" id="addParcel">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade zoomIn" id="parcelLogModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content border-0">
            <div class="modal-header p-3 bg-soft-info">
                <h5 class="modal-title" id="exampleModalLabel">Parcel History Logs</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
            </div>
            <div class="modal-body">
                <table id="gridParcelLog" class="display table caption-top table-nowrap" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th>Action</th>
                            <th>Parcel Id</th>
                            <th>Parcel Code</th>
                            <th>Dishpached Date</th>
                            <th>Challan No</th>
                            <th>Arrival Date</th>
                            <th>Receive Location</th>
                            <th>Created By</th>
                            <th>Created Date</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="modal-footer">
                <div class="hstack gap-2 justify-content-end">
                    <button type="button" class="btn btn-light" id="close-modal" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>


