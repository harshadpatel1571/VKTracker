

@model VKTracker.Model.ViewModel.ParcelViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/_BreadCrum.cshtml")

<div class="card">
    <div class="card-header d-flex align-items-center">
        <h5 class="card-title mb-0 flex-grow-1">Stock Management</h5>
        <div>
            <button class="btn btn-primary btn-label waves-effect waves-light" data-bs-toggle="modal" id="btnStockManagement" data-bs-target="#parcelModal">
                <i class="ri-add-circle-line label-icon align-middle fs-16 me-2"></i> Add Stock Management
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="gridStockManagement" class="display table caption-top table-nowrap" style="width:100%">
            <thead class="table-light">
                <tr>
                    <th>Parcel code</th>
                    <th>Stock Code</th>
                    <th>Fabric Type</th>
                    <th>Item Type</th>
                    <th>Current Location</th>
                    <th>Total Quantity</th>
                    <th>Modified By</th>
                    <th>Modified Date</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

